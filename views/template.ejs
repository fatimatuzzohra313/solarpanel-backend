    <!-- Header -->
    <div class="header">
      <div class="welcome-badge">Welcome aboard!</div>
      <h1 class="header-title">Your Account Details</h1>
    </div>

    <!-- Content -->
    <div class="content">
      <div class="greeting">Dear <%= firstName %> <%= lastName %>,</div>
      <p>Thank you for registering with <strong><%= companyName %></strong>. We're excited to have you on board! Below are your account details:</p>

      <!-- Details Table -->
      <table class="details-table">
        <tr>
          <th>Name</th>
          <td><%= firstName %> <%= lastName %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= email %></td>
        </tr>
        <tr>
          <th>User Type</th>
          <td>
            <span class="user-badge <%= userType.toLowerCase() %>"><%= userType %></span>
          </td>
        </tr>
        <tr>
          <th>Company Role</th>
          <td><%= companyRole %></td>
        </tr>
        <tr>
          <th>Phone</th>
          <td><%= phone %></td>
        </tr>
        <tr>
          <th>Location</th>
          <td><%= state %>, <%= country %></td>
        </tr>
      </table>

      <div class="password-container">
        <div class="password-label">Your Password</div>
        <div class="password-value"><%= password %></div>
      </div>

      <p>For security reasons, we recommend changing your password after your first login.</p>

      <a href="#" class="login-button">Log In to Your Account</a>
    </div>

    <div class="footer">
      <p>Need help? Contact our support team:</p>
      <p><a href="mailto:support@yourcompany.com">support@yourcompany.com</a></p>
      <p>Phone: +123-456-7890</p>
      <p>Address: 123 Business Street, City, Country</p>
